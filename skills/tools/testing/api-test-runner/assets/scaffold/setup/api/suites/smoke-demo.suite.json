{
  "version": 1,
  "name": "smoke-demo",
  "defaults": {
    "env": "local",
    "noHistory": true,
    "rest": { "url": "http://127.0.0.1:43127" },
    "graphql": { "url": "https://countries.trevorblades.com/" }
  },
  "cases": [
    {
      "id": "rest.local.get",
      "type": "rest",
      "tags": ["public", "demo", "smoke"],
      "request": "setup/rest/requests/local.get.request.json"
    },
    {
      "id": "graphql.countries.country",
      "type": "graphql",
      "tags": ["public", "demo", "smoke"],
      "op": "setup/graphql/operations/country.graphql",
      "vars": "setup/graphql/operations/country.variables.json",
      "expect": {
        "jq": "(.data.country.code == \"TW\") and ((.data.country.name | type) == \"string\") and ((.data.country.name | length) > 0)"
      }
    }
  ]
}
